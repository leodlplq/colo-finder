<form class="flex flex-col gap-3 w-full" method="POST" action="{{ route('books.update', book) }}?_method=PUT"
  enctype="multipart/form-data">
  {{ csrfField() }}
  @!textInput({ type: 'text', name: 'name', placeholder: 'Grands classique NÂ°1', label: 'Nom du livre', value:
  book.name})
